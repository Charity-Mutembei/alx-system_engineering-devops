#!/bin/bash

# Update the package repository
sudo apt-get update

# Install HAProxy
sudo apt-get install -y haproxy

# Configure HAProxy to send traffic to web-01 and web-02 using round-robin
cat <<EOL | sudo tee /etc/haproxy/haproxy.cfg
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http-in
    bind *:80
    default_backend webservers

backend webservers
    balance roundrobin
    server web-01 [STUDENT_ID]-web-01:80 check
    server web-02 [STUDENT_ID]-web-02:80 check
EOL

# Make sure HAProxy can be managed via an init script
echo 'ENABLED=1' | sudo tee /etc/default/haproxy

# Restart HAProxy to apply the configuration
sudo systemctl restart haproxy
